<div class="card">
  <div class="card-header">
    <%= form_with url: time_counts_path, method: :post do |form| %>
      <div class="form-group">
        <%= form.label 'Tracker ID', class: 'control-label' %>
        <%= form.text_field :tracker_id, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit 'Punch In', class: 'btn btn-success' %>
        <%= link_to 'Back', :back, class: 'btn btn-dark' %>
      </div>
    <% end %>
  </div>
</div>